<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.new_puppy">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/dogfoot"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.New_puppy"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <uses-library
            android:name="com.google.android.maps"
            android:required="true" />

        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AdminageContainerActivity"
            android:exported="true" />
        <activity
            android:name=".activity.UserPageContainerActivity"
            android:exported="true" />
        <activity
            android:name=".activity.Admin"
            android:exported="false" />
        <activity
            android:name=".activity.MyProfile"
            android:exported="false" />
        <activity
            android:name=".activity.Bath_House_Booking"
            android:exported="false" />
        <activity
            android:name=".activity.AddPost"
            android:exported="false" />
        <activity
            android:name=".activity.Bright_Kennel"
            android:exported="false" />
        <activity
            android:name=".activity.BathHouse"
            android:exported="true" />
        <activity
            android:name=".activity.Veterinarians"
            android:exported="true" />
        <activity
            android:name=".activity.Education"
            android:exported="false" />
        <activity
            android:name=".activity.About"
            android:exported="true" />
        <activity
            android:name=".activity.Login"
            android:exported="true">
        </activity>
        <activity
            android:name=".activity.SignUp"
            android:exported="true" />
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>