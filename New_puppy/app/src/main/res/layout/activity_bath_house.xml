<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bground"
    tools:context=".activity.BathHouse">

    <TextView
        android:id="@+id/Puppy_Bath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="10dp"
        android:text="Bath House"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/Bath_image_Slider"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:layout_below="@+id/Puppy_Bath"
        android:layout_marginTop="-4dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true" />





    <Button
        android:id="@+id/Puppy_Bath_Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:layout_below="@+id/Bath_image_Slider"
        />


    <TextView
        android:id="@+id/Puppy_Bath_Details"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:layout_below="@+id/Puppy_Bath_Gallery"
        android:text="@string/PuppyBath"
        android:textSize="20dp" />


    <Button
        android:id="@+id/Puppy_Bath_Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK NOW"
        android:layout_below="@+id/Puppy_Bath_Details"
        />


</RelativeLayout>
</ScrollView>

