<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Bath_House_Booking"
    android:background="@drawable/bground">


    <TextView
        android:id="@+id/Puppy_Booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="10dp"
        android:text="Bath House Booking"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


    <!--    <TextView-->
<!--        -->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/booking_spinner"-->
<!--        android:text="Pleace Select Your Date"-->
<!--        android:textAlignment="center"-->
<!--        android:textColor="#009688"-->
<!--        android:textSize="20dp" />-->


    <Spinner
        android:id="@+id/booking_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/BookingMenu"
        android:textAlignment="center"
        android:layout_below="@+id/Puppy_Booking"/>

    <EditText
        android:id="@+id/Booking_Receve_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_spinner"
        android:layout_marginTop="12dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Pleace Select Your Date"
        android:text=""
        android:textAlignment="center"


        android:textColor="#009688"
        android:textSize="20dp" />


    <TimePicker
        android:id="@+id/TimePicker"
        android:layout_width="210dp"
        android:layout_height="361dp"
        android:layout_below="@+id/Booking_Receve_Date"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="91dp" />

    <EditText
        android:id="@+id/Booking_Receve_Puppy_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimePicker"
        android:layout_marginTop="12dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Enter Your ID"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Puppy_Booking_Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Booking_Receve_Puppy_ID"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="11dp"
        android:text="Book Hear" />


</RelativeLayout>
</ScrollView>